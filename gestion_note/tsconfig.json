{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true // Activer l'option allowJs
  },
  "include": [
    "src/**/*.ts",
    "../gestion_note_server/**/*.ts",
    "../gestion_note_server/**/*.js" // Inclure les fichiers JavaScript
  ]
}